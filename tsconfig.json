{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@app/database": ["libs/database/src"],
      "@app/database/*": ["libs/database/src/*"],
      "@app/storage": ["libs/storage/src/index.ts"],
      "@app/messaging": ["libs/messaging/src/index.ts"],
      "@app/shared": ["libs/shared/src/index.ts"],
      "@app/email": ["libs/email/src/index.ts"],
      "@app/redis": ["libs/redis/src/index.ts"],
      "media-processor": ["libs/media-processor/src/index.ts"]
    }
  }
}
